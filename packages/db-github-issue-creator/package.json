{
  "name": "db-github-issue-creator",
  "private": true,
  "version": "0.1.0",
  "description": "Figma plugin to create GitHub issues directly from Figma",
  "main": "index.js",
  "workspaces": [
    "plugin",
    "ui"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:plugin build:ui",
    "build:plugin": "cd plugin && npm run build",
    "build:ui": "cd ui && npm run build",
    "dev": "npm-run-all --parallel dev:plugin dev:ui",
    "dev:plugin": "cd plugin && npm run dev",
    "dev:ui": "cd ui && npm run dev",
    "test": "npm-run-all --parallel test:plugin test:ui",
    "test:plugin": "cd plugin && npm run test",
    "test:ui": "cd ui && npm run test"
  }
}
